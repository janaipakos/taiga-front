//- NOTIFICATIONS CHOICES:
//-   1 - Only involved
//-   2 - Receive all
//-   3 - No notifications

a.track-button.watch-button.watch-container(href="",
                                            title="Watch this project",
                                            ng-click="vm.toggleWatcherOptions()",
                                            ng-class="{'active': vm.project.get('is_watched')}")
    span.track-inner
        span.track-icon
            include ../../../svg/watch.svg
        span Watch
        span.icon.icon-arrow-up
    span.track-button-counter {{ vm.project.get('watchers').size }}

ul.watch-options(ng-class="{'hidden': !vm.showWatchOptions}")
    li
        a(href="",
          title="Receive all notifications",
          ng-click="vm.watchAndNotifyAll()",
          ng-class="{'active': vm.project.get('is_watched') && vm.project.get('notify_policy') == 2}")
            span(translate="PROJECT.NOTIFICATIONS.ALL")
            span.watch-check(ng-if="vm.project.get('is_watched') && vm.project.get('notify_policy') == 2")
                include ../../../svg/check.svg
    li
        a(href="",
          title="Only involved",
          ng-click="vm.watchAndNotifyInvolved()",
          ng-class="{'active': vm.project.get('is_watched') && vm.project.get('notify_policy') == 1}")
            span(translate="PROJECT.NOTIFICATIONS.INVOLVED")
            span.watch-check(ng-if="vm.project.get('is_watched') && vm.project.get('notify_policy') == 1")
                include ../../../svg/check.svg
    li
        a(href="",
          title="No notifications",
          ng-click="vm.watchAndNotifyNone()",
          ng-class="{'active': vm.project.get('is_watched') && vm.project.get('notify_policy') == 3}")
            span(translate="PROJECT.NOTIFICATIONS.NONE")
            span.watch-check(ng-if="vm.project.get('is_watched') && vm.project.get('notify_policy') == 3")
                include ../../../svg/check.svg
