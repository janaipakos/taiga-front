a.track-button.like-button.like-container(href="",
                             title="Like this project",
                             ng-click="vm.toggleLike()",
                             ng-class="{'active': vm.project.get('is_liked')}")
    span.track-inner
        span.track-icon
            include ../../../svg/like.svg
        span(ng-if="!vm.project.get('is_liked')") Like
        span(ng-if="vm.project.get('is_liked')") Unlike
    span.track-button-counter {{ vm.project.get('likes') }}
