div.profile-project-fav
    div.profile-project-data
        h2
            a(href="#", tg-nav="project:project=vm.item.get('slug')",
              title="{{ ::vm.item.get('name') }}") {{ ::vm.item.get('name') }}
            span.private(ng-if="::vm.item.get('is_private')")
        p {{ ::vm.item.get('description') }}

        div.profile-project-tags.tags-container(ng-if="::vm.item.get('tags_colors').size")
            span.tag(tg-repeat="tag in ::vm.item.get('tags_colors')",
                     style='border-left: 5px solid {{ ::tag.get("color") }};')
                span.tag-name {{ ::tag.get('name') }}

    div.profile-tickets-track
        span.profile-project-likers(ng-class="{'active': vm.item.get('is_voted')}")
            span.icon
                include ../../../../svg/like.svg
            span {{ ::vm.item.get('total_votes') }}

        span.profile-project-watchers(ng-class="{'active': vm.item.get('is_watched')}")
            span.icon
                include ../../../../svg/watch.svg
            span {{ ::vm.item.get('total_watchers') }}
